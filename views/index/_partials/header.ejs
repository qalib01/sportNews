<!-- Header -->
<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Header Mobile -->
        <div class="wrap-header-mobile">
            <!-- Logo moblie -->
            <div class="logo-mobile">
                <a href="/" class="text-decoration-none">
                    <img src="/images/icons/logo-03.png" alt="SproterAz">
                </a>
            </div>

            <!-- Button show menu -->
            <div class="btn-show-menu-mobile hamburger hamburger--squeeze m-r--8">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </div>
        </div>

        <!-- Menu Mobile -->
        <div class="menu-mobile">
            <ul class="main-menu-m">
                <li class="<%= key === 'home' ? 'main-menu-m-active' : '' %>">
                    <a href="/" class="text-decoration-none"> Ana səhifə </a>
                </li>
                <li class="<%= key === 'about' ? 'main-menu-m-active' : '' %>">
                    <a href="/about" class="text-decoration-none"> Haqqımızda </a>
                </li>
                <li class="<%= key === 'news' ? 'main-menu-m-active' : '' %>">
                    <a href="/news" class="text-decoration-none"> Xəbərlər </a>
                </li>
            </ul>
        </div>

        <!--  -->
        <div class="wrap-logo container">
            <!-- Logo desktop -->
            <div class="logo">
                <a href="/" class="d-flex text-decoration-none">
                    <img src="/images/icons/logo-03.png" alt="SporterAz">
                </a>
            </div>

            <!-- Banner -->
            <div class="banner-header">
                <a href="/">
                    <img src="/images/banners/banner_320x50.png" alt="Banner">
                </a>
            </div>
        </div>

        <!--  -->
        <div class="wrap-main-nav">
            <div class="main-nav">
                <!-- Menu desktop -->
                <nav class="menu-desktop">
                    <a class="logo-stick text-decoration-none" href="/">
                        <img src="/images/icons/logo-03.png" alt="LOGO">
                    </a>

                    <ul class="main-menu" style="column-gap: 10px;">
                        <li class="<%= key === 'home' ? 'main-menu-active' : '' %>">
                            <a href="/" class="text-decoration-none"> Ana səhifə </a>
                        </li>
                        <li class="<%= key === 'about' ? 'main-menu-active' : '' %>">
                            <a href="/about" class="text-decoration-none"> Haqqımızda </a>
                        </li>
                        <li class="<%= key === 'news' ? 'main-menu-active' : '' %>">
                            <a href="/news" class="text-decoration-none"> Xəbərlər </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>