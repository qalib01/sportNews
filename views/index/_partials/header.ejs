<!-- Header -->
<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <div class="topbar">
            <div class="content-topbar container h-100">
                <div class="left-topbar">
                    <span class="left-topbar-item flex-wr-s-c">
                        <span class="m-r-5">
                            Bakı, AZ
                        </span>
                        -
                        <span class="m-l-5">
                            <%= moment().tz('Asia/Baku').format('LLLL') %>
                        </span>
                    </span>

                    <a href="/" class="left-topbar-item text-decoration-none">
                        Ana səhifə
                    </a>
                    <a href="/about" class="left-topbar-item text-decoration-none">
                        Haqqımızda
                    </a>
                    <a href="/news" class="left-topbar-item text-decoration-none">
                        Xəbərlər
                    </a>
                </div>

                <div class="right-topbar">
                    <% platformSocialMedias.forEach((media) => { %>
                        <a href="<%= media.social_media.link %><%= media.linkSlug %>" class="text-decoration-none" target="_blank" title="<%= media.social_media.name %>">
                            <%- media.social_media.icon %>
                        </a>
                    <% }) %>
                </div>
            </div>
        </div>
        <!-- Header Mobile -->
        <div class="wrap-header-mobile">
            <!-- Logo moblie -->
            <div class="logo-mobile">
                <a href="/" class="text-decoration-none">
                    <img src="/images/icons/logo.webp" alt="SporterAz">
                </a>
            </div>

            <!-- Button show menu -->
            <div class="btn-show-menu-mobile m-r--8">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>

        <!-- Menu Mobile -->
        <div class="menu-mobile">
            <ul class="topbar-mobile">
                <li class="left-topbar">
                    <span class="left-topbar-item flex-wr-s-c">
                        <span class="m-r-5">
                            Bakı, AZ
                        </span>
                        - 
                        <span class="m-l-5">
                            <%= moment().tz('Asia/Baku').format('LLLL') %>
                        </span>
                    </span>
                </li>

                <li class="left-topbar">
                    <a href="/" class="left-topbar-item text-decoration-none">
                        Ana səhifə
                    </a>
                    <a href="/about" class="left-topbar-item text-decoration-none">
                        Haqqımızda
                    </a>
                    <a href="/news" class="left-topbar-item text-decoration-none">
                        Xəbərlər
                    </a>
                </li>

                <div class="right-topbar">
                    <% platformSocialMedias.forEach((media) => { %>
                        <a href="<%= media.social_media.link %><%= media.linkSlug %>" class="text-decoration-none" target="_blank" title="<%= media.social_media.name %>">
                            <%- media.social_media.icon %>
                        </a>
                    <% }) %>
                </div>
            </ul>
            <ul class="main-menu-m">
                <% listedCategories.forEach((category) => { %>
                    <li>
                        <a class="text-decoration-none" href="/news?category=<%= category.key %>"> <%= category.name %> </a>
                        <ul class="sub-menu-m">
                            <a class="nav-link active" data-toggle="pill" href="/news?category=<%= category.key %>" role="tab"> Hamısı </a>
                            <% category.sub_categories.forEach((sub_category) => { %>
                                <li>
                                    <a class="text-decoration-none" href="/news?sub_category=<%= sub_category.key %>"> <%= sub_category.name %> </a>
                                </li>
                            <% }) %>
                        </ul>
    
                        <span class="arrow-main-menu-m">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </span>
                    </li>
                <% }) %>
            </ul>
        </div>

        <div class="wrap-logo container d-none d-lg-flex">
            <div class="logo">
                <a href="/" class="d-none d-lg-block text-decoration-none" title="SporterAz">
                    <img src="/images/icons/logo.webp" alt="SporterAz" style="padding-right:10px;max-width:250px;width:100%;height:100%;">
                </a>
            </div>
        </div>
        <div class="wrap-main-nav">
            <div class="main-nav">
                <nav class="menu-desktop">
                    <a class="logo-stick" href="/" title="SporterAz">
                        <img src="/images/icons/logo.webp" alt="SporterAz">
                    </a>
                    <ul class="main-menu">
                        <% listedCategories.forEach((category) => { %>
                            <li>
                                <a class="text-decoration-none" href="/news?category=<%= category.key %>"> <%= category.name %> </a>
                                <div class="sub-mega-menu">
                                    <div class="nav flex-column nav-pills" role="tablist">
                                        <a class="nav-link active" data-toggle="pill" href="/news?category=<%= category.key %>" role="tab"> Hamısı </a>
                                        <% category.sub_categories.forEach((sub_category) => { %>
                                            <a class="nav-link text-decoration-none" data-toggle="pill" href="/news?sub_category=<%= sub_category.key %>" role="tab"> <%= sub_category.name %> </a>
                                        <% }) %>
                                    </div>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</header>