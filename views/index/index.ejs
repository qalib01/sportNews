<%- include('./_partials/head') %>
  <%- include('./_partials/header') %>

    <div class="banner-container d-flex justify-content-between">
      <div id="left-banner" class="d-none d-lg-block">
        <a href="#">
          <img src="/images/banners/banner_160x600.png" alt="Banner"
            style="max-width: 100%; height: auto; display: block;">
        </a>
      </div>
      <div>
        <% if (trendNews.length> 0) { %>
          <div class="container p-t-20 trending bg0">
            <div class="bg0 flex-wr-sb-c">
              <div class="f2-s-1 p-r-30 size-w-0 m-tb-6 flex-wr-s-c">
                <span class="text-uppercase cl2 p-r-8 trending-txt">
                  Trenddə olanlar:
                </span>
                <span class="dis-inline-block cl6 slide100-txt pos-relative size-w-0" data-in="fadeInDown"
                  data-out="fadeOutDown">
                  <% trendNews.forEach((news)=> { %>
                    <span class="dis-inline-block slide100-txt-item animated visible-false">
                      <%= news.title %>
                    </span>
                    <% }) %>
                </span>
              </div>
            </div>
          </div>
          <% } %>

            <!-- Banner -->
            <div class="container bg0 p-t-20 p-b-20">
              <div class="flex-c-c justify-content-around flex-md-row flex-column" style="row-gap: 10px;">
                <div class="">
                  <a href="#">
                    <img class="max-w-full" src="/images/banners/banner_320x100.png" alt="Banner">
                  </a>
                </div>
                <div class="d-none d-md-block">
                  <a href="#">
                    <img class="max-w-full" src="/images/banners/banner_320x100.png" alt="Banner">
                  </a>
                </div>
                <div class="d-none d-lg-block">
                  <a href="#">
                    <img class="max-w-full" src="/images/banners/banner_320x100.png" alt="Banner">
                  </a>
                </div>
              </div>
            </div>

            <!-- Feature post -->
            <section class="bg0">
              <div class="container">
                <div class="row m-rl--1">
                  <% if(allNews.length > 0) { %>
                    <% let firstNews = allNews[0]; %>
                    <div class="col-md-6 p-rl-1 p-b-2">
                      <div class="bg-img1 ratio ratio-4x3 how1 pos-relative" style="background-image: url('/images/news/<%= firstNews.img %>');">
                        <a href="/news/news-detail?key=<%= firstNews.key %>" class="dis-block how1-child1 trans-03 text-decoration-none"></a>
                        <div class="flex-col-e-s s-full p-rl-25 p-tb-20">
                          <a href="/news?category=<%= firstNews.category.key %>" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2 text-decoration-none">
                            <%= firstNews.category.name %>
                          </a>
                          <h3 class="how1-child2 m-t-14 m-b-10">
                            <a href="/news/news-detail?key=<%= firstNews.key %>" class="how-txt1 size-a-6 f1-l-1 cl0 hov-cl10 trans-03 text-decoration-none">
                              <%= firstNews.title %>
                            </a>
                          </h3>
                          <span class="how1-child2">
                            <span class="f1-s-3 cl11">
                              <%= moment(firstNews.createdAt).format('LL') %>
                            </span>
                          </span>
                        </div>
                      </div>
                    </div>

                    <div class="col-md-6 p-rl-1">
                      <div class="row m-rl--1">
                        <% for (let i = 1; i < allNews.slice(0,5).length; i++) { %>
                          <% let news = allNews[i]; %>
                          <div class="col-sm-6 p-rl-1 p-b-2">
                            <div class="bg-img1 ratio ratio-4x3 how1 pos-relative" style="background-image: url('/images/news/<%= news.img %>');">
                              <a href="/news/news-detail?key=<%= news.key %>" class="dis-block how1-child1 trans-03 text-decoration-none"></a>
                              <div class="flex-col-e-s s-full p-rl-25 p-tb-24">
                                <a href="/news?category=<%= news.category.key %>" class="dis-block how1-child2 f1-s-2 cl0 bo-all-1 bocl0 hov-btn1 trans-03 p-rl-5 p-t-2 text-decoration-none">
                                  <%= news.category.name %>
                                </a>
                                <h3 class="how1-child2 m-t-14">
                                  <a href="/news/news-detail?key=<%= news.key %>" class="how-txt1 size-a-7 f1-l-2 cl0 hov-cl10 trans-03 text-decoration-none">
                                    <%= news.title %>
                                  </a>
                                </h3>
                              </div>
                            </div>
                          </div>
                        <% } %>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>
            </section>

            <!-- Post -->
            <section>
              <div class="container bg0 p-t-20">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-8">
                    <div class="p-b-20">
                      <!-- Categories -->
                      <% categoryArray.forEach((category)=> { %>
                        <div class="tab01 p-b-20">
                          <div class="tab01-head how2 how2-cl1 bocl12 flex-s-c m-r-10 m-r-0-sr991">
                            <!-- Brand tab -->
                            <h3 class="f1-m-2 cl12 tab01-title">
                              <%= category.name %>
                            </h3>

                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                              <% category.tags.forEach((tag, id)=> { %>
                                <li class="nav-item">
                                  <a class="nav-link <%= id == 0 ? 'active' : '' %> text-decoration-none"
                                    data-toggle="tab" href="#<%= tag.key %>-<%= category.key %>" role="tab">
                                    <%= tag.name %>
                                  </a>
                                </li>
                                <% }) %>
                                  <li class="nav-item-more dropdown dis-none">
                                    <a class="nav-link dropdown-toggle text-decoration-none" data-toggle="dropdown"
                                      href="#" aria-expanded="false">
                                      Taglar
                                      <i class="fa-solid fa-chevron-down fs-12 ml-2"></i>
                                    </a>
                                    <ul class="dropdown-menu" x-placement="bottom-start"
                                      style="position: absolute; transform: translate3d(0px, 644px, 0px); top: 0px; left: 0px; will-change: transform;"
                                      x-out-of-boundaries=""></ul>
                                  </li>
                            </ul>

                            <!-- View all button -->
                            <a href="/news?category=<%= category.key %>"
                              class="tab01-link f1-s-1 cl9 hov-cl10 trans-03 text-decoration-none">
                              Hamısı
                              <i class="fs-12 m-l-5 fa fa-caret-right"></i>
                            </a>
                          </div>

                          <!-- Tab panes -->
                          <div class="tab-content p-t-35">
                            <!-- Category List -->
                            <% category.tags.forEach((tag, id)=> { %>
                              <div class="tab-pane fade <%= id === 0 ? 'show active' : '' %>"
                                id="<%= tag.key %>-<%= category.key %>" role="tabpanel">
                                <div class="row">
                                  <!-- Item post -->
                                  <% tag.news.forEach((nws)=> { %>
                                    <div class="flex-wr-sb-s m-b-30 col-12 col-sm-6">
                                      <a href="/news/news-detail?key=<%= nws.key %>"
                                        class="size-w-1 wrap-pic-w hov1 trans-03 text-decoration-none"
                                        style="height: 60px;">
                                        <img src="/images/news/<%= nws.img %>" alt="<%= nws.title %>"
                                          class="object-fit-cover h-100">
                                      </a>
                                      <div class="size-w-2">
                                        <h5 class="p-b-5">
                                          <a href="/news/news-detail?key=<%= nws.key %>"
                                            class="f1-s-5 cl3 hov-cl10 trans-03 fw-bold text-decoration-none">
                                            <%= nws.title %>
                                          </a>
                                        </h5>
                                        <span class="cl8">
                                          <span class="f1-s-3">
                                            <%= moment(nws.createdAt).format('LL') %>
                                          </span>
                                        </span>
                                      </div>
                                    </div>
                                    <% }) %>
                                </div>
                              </div>
                              <% }) %>
                          </div>
                        </div>
                        <% }) %>
                    </div>
                  </div>

                  <div class="col-md-10 col-lg-4">
                    <div class="p-l-10 p-rl-0-sr991 p-b-20">
                      <%- include('./items/most_popular') %>
                        <!-- Banner -->
                        <div class="flex-c-s p-t-8">
                          <a href="#">
                            <img class="max-w-full" src="/images/banners/banner_160x600.png" alt="Banner">
                          </a>
                        </div>
                        <%- include('./items/stay_connected') %>
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <!-- Banner -->
            <div class="container bg0">
              <div class="flex-c-c justify-content-around flex-md-row flex-column" style="row-gap: 10px;">
                <div class="">
                  <a href="#">
                    <img class="max-w-full" src="/images/banners/banner_300x250.png" alt="Banner">
                  </a>
                </div>
                <div class="d-none d-md-block">
                  <a href="#">
                    <img class="max-w-full" src="/images/banners/banner_300x250.png" alt="Banner">
                  </a>
                </div>
                <div class="d-none d-lg-block">
                  <a href="#">
                    <img class="max-w-full" src="/images/banners/banner_300x250.png" alt="Banner">
                  </a>
                </div>
              </div>
            </div>

            <!-- Latest -->
            <section>
              <div class="container p-t-60 p-b-35 bg0">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-8 p-b-20">
                    <div class="how2 how2-cl4 flex-s-c m-r-10 m-r-0-sr991 justify-content-between">
                      <h3 class="f1-m-2 cl3 tab01-title"> Son xəbərlər </h3>
                      <a href="/news" class="tab01-link f1-s-1 cl9 hov-cl10 trans-03 text-decoration-none">
                        Hamısı
                        <i class="fs-12 m-l-5 fa fa-caret-right"></i>
                      </a>
                    </div>
                    <div class="row p-t-35">
                      <% allNews.slice(0,6).forEach((news)=> { %>
                        <div class="col-sm-6 p-r-25 p-r-15-sr991">
                          <!-- Item latest -->
                          <div class="m-b-45">
                            <a href="/news/news-detail?key=<%= news.key %>"
                              class="wrap-pic-w hov1 trans-03 text-decoration-none" style="height: 240px;">
                              <img src="/images/news/<%= news.img %>" alt="<%= news.title %>"
                                class="object-fit-cover h-100">
                            </a>
                            <div class="p-t-16">
                              <h5 class="p-b-5">
                                <a href="/news/news-detail?key=<%= news.key %>"
                                  class="f1-m-3 cl2 hov-cl10 trans-03 fw-bold text-decoration-none">
                                  <%= news.title %>
                                </a>
                              </h5>
                              <span class="cl8 f1-s-3 fw-bold">
                                <span class="f1-s-3">
                                  <%= moment(news.createdAt).format('LL') %>
                                </span>
                              </span>
                            </div>
                          </div>
                        </div>
                        <% }) %>
                    </div>
                  </div>

                  <div class="col-md-10 col-lg-4">
                    <div class="p-l-10 p-rl-0-sr991 p-b-20">
                      <!-- Video -->
                      <% if (youTubeVideoLink) { %>
                        <div class="p-b-55">
                          <div class="how2 how2-cl4 flex-s-c m-b-35">
                            <h3 class="f1-m-2 cl3 tab01-title">
                              YouTube video
                            </h3>
                          </div>
                          <div>
                            <div class="wrap-pic-w pos-relative">
                              <img src="/images/uploads/video-01.jpg" alt="YouTube Stream">
                              <button class="s-full ab-t-l flex-c-c fs-32 cl0 trans-03" data-toggle="modal"
                                data-target="#modal-video-01">
                                <span class="fab fa-youtube"></span>
                              </button>
                            </div>

                            <div class="p-tb-16 p-rl-25 bg3">
                              <h5 class="p-b-5">
                                <a href="javascript:void(0)" data-target="#modal-video-01" data-toggle="modal"
                                  class="f1-m-3 cl0 trans-03 text-decoration-none fw-bold">
                                  <%= youTubeVideoLink.name %>
                                </a>
                              </h5>
                            </div>
                          </div>
                        </div>
                        <% } %>

                          <% if (youTubeVideoLink) { %>
                            <!-- Modal Video 01-->
                            <div class="modal fade" id="modal-video-01" tabindex="-1" role="dialog" aria-hidden="true">
                              <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content w-auto bg-transparent">
                                  <div class="modal-body p-0">
                                    <div class="wrap-video-mo-01" style="max-width: 800px; margin: 0 auto;">
                                      <div class="video-mo-01">
                                        <%- youTubeVideoLink.linkSlug %>
                                      </div>
                                    </div>
                                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-dismiss="modal" aria-label="Close"></button>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <% } %>

                          <%- include('./items/subscription_small') %>
                          <%- include('./items/tags') %>
                    </div>
                  </div>
                </div>
              </div>
            </section>
      </div>
      <div id="right-banner" class="d-none d-lg-block">
        <a href="#">
          <img src="/images/banners/banner_160x600.png" alt="Banner"
            style="max-width: 100%; height: auto; display: block;">
        </a>
      </div>
    </div>

    <%- include('./_partials/footer') %>