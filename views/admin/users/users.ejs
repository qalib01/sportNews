<%- include('../_partials/header') %>
    <!-- Content wrapper -->
    <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="py-3 mb-4"><span class="text-muted fw-light">İstifadəçilər /</span> <%= title %> </h4>

            <!-- Hoverable Table rows -->
            <div class="card">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="card-header"><%= title %></h5>
                    <button type="button" id="createBtn" class="btn btn-primary m-3" data-bs-toggle="modal" data-bs-target="#basicModal" data-action="/admin/create-user"> <span class="d-none d-md-block">Yarat</span> <span class="d-block d-md-none"><i class='bx bx-plus-circle'></i></span> </button>
                </div>
                <div class="table-responsive text-nowrap">
                    <table class="table table-hover">
                        <caption class="ms-4">
                            Ümumi tapılan kateqoriyalar: <%= users.length %>
                        </caption>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tam adı</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Hərəkətlər</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            <% users.forEach((user, id)=> { %>
                                <tr>
                                    <td>
                                        <!-- <i class="bx bxl-angular bx-sm text-danger me-3"></i> -->
                                        <span class="fw-medium">
                                            <%= id + 1 %>
                                        </span>
                                    </td>
                                    <td>
                                        <%= user.name %> <%= user.surname %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <% if (user.status==true) { %>
                                            <span class="badge bg-label-primary me-1">Aktiv</span>
                                        <% } else { %>
                                            <span class="badge bg-label-danger me-1">Passiv</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                                data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item editBtn" href="javascript:void(0);" data-bs-toggle="modal" data-bs-target="#basicModal" data-action="/admin/edit-user?id=<%= user.id %>" data-item="user" data-id="<%= user.id %>">
                                                    <i class="bx bx-edit-alt me-1"></i> Düzəlt
                                                </a>
                                                <a class="dropdown-item deleteBtn" href="javascript:void(0);" data-action="/admin/delete-user?id=<%= user.id %>" data-bs-toggle="modal" data-item="user" data-bs-target="#deleteModal">
                                                    <i class="bx bx-trash me-1"></i> Sil
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!--/ Hoverable Table rows -->
        </div>
        <!-- / Content -->

        <div class="modal fade" id="basicModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel1"><%= title %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="basicForm">
                            <div class="mb-3">
                                <label class="form-label" for="name">Ad</label>
                                <input type="text" class="form-control" id="name" placeholder="Adı" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="surname">Soyadı</label>
                                <input type="text" class="form-control" id="surname" placeholder="Soyadı" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Email" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Şifrə</label>
                                <input type="text" class="form-control" id="password" placeholder="Şifrə">
                            </div>
                            <div class="mb-3">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" aria-label="Select item status">
                                    <option selected="" hidden>Seçim edin</option>
                                    <option value="0">Passiv</option>
                                    <option value="1">Aktiv</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary" data-item="user">Təsdiqlə</button>
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"> Bağla
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1"  aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Sil</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="deleteForm">
                            <div class="mb-3">
                                <p>Bunu etmək istədiyinizə əminsiniz?</p>
                            </div>
                            <button type="submit" class="btn btn-danger">Sil</button>
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal"> Bağla </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../_partials/footer') %>