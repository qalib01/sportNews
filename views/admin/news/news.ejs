<%- include('../_partials/header') %>
    <!-- Content wrapper -->
    <div class="content-wrapper">
        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <h4 class="py-3 mb-4"><span class="text-muted fw-light">Xəbərlər /</span> Xəbərlər </h4>

            <!-- Hoverable Table rows -->
            <div class="card">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="card-header">Xəbərlər</h5>
                    <button type="button" class="btn btn-primary m-3" data-bs-toggle="modal"
                        data-bs-target="#basicModal">
                        Yarat </button>
                </div>
                <div class="table-responsive text-nowrap">
                    <table class="table table-hover">
                        <caption class="ms-4">
                            Ümumi tapılan xəbərlər: <%= news.length %>
                        </caption>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Titul</th>
                                <th>Kateqoriya</th>
                                <th>Taqlar</th>
                                <th>Status</th>
                                <th>Hərəkətlər</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            <% news.forEach((nws, id)=> { %>
                                <tr>
                                    <td>
                                        <span class="fw-medium">
                                            <%= id + 1 %>
                                        </span>
                                    </td>
                                    <td class="text-wrap">
                                        <%= nws.title %>
                                    </td>
                                    <td>
                                        <%= nws.category.name %>
                                    </td>
                                    <td class="text-wrap">
                                        <% nws.news_tags.forEach((news_tag)=> { %>
                                            <span class="badge bg-label-success me-1">
                                                <%= news_tag.tag.name %>
                                            </span>
                                            <% }) %>
                                    </td>
                                    <td>
                                        <% if (nws.status==true) { %>
                                            <span class="badge bg-label-primary me-1">Aktiv</span>
                                            <% } else { %>
                                                <span class="badge bg-label-danger me-1">Passiv</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="javascript:void(0);">
                                                    <i class="bx bx-edit-alt me-1"></i> Düzəlt
                                                </a>
                                                <a class="dropdown-item" href="javascript:void(0);">
                                                    <i class="bx bx-trash me-1"></i> Sil
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
            <!--/ Hoverable Table rows -->
        </div>
        <!-- / Content -->

        <%- include('../_partials/footer') %>


            <div class="modal fade" id="basicModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel1">Yenisini yarat</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="POST" >
                                <div class="mb-3">
                                    <label class="form-label" for="name">Adı</label>
                                    <input type="text" class="form-control" id="name" placeholder="Adı" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="description">Məzmunu</label>
                                    <div id="editor"></div>
                                </div>
                                <div class="mb-3">
                                    <label for="category" class="form-label">Kateqoriya</label>
                                    <select class="form-select" id="category" aria-label="Select item category"
                                        required>
                                        <option selected hidden disabled>Seçim edin</option>
                                        <% categories.forEach((category)=> { %>
                                            <option value="<%= category.id %>">
                                                <%= category.name %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="tags" class="form-label">Taglar</label>
                                    <br />
                                    <% tags.forEach((tag)=> { %>
                                        <div class="form-check form-check-inline mb-3">
                                            <input class="form-check-input" type="checkbox" id="<%= tag.key %>"
                                                value="<%= tag.id %>">
                                            <label class="form-check-label" for="<%= tag.key %>">
                                                <%= tag.name %>
                                            </label>
                                        </div>
                                        <% }) %>
                                </div>
                                <div class="mb-3">
                                    <label for="status" class="form-label">Status</label>
                                    <select class="form-select" id="status" aria-label="Select item status">
                                        <option selected="" hidden>Seçim edin</option>
                                        <option value="0">Passiv</option>
                                        <option value="1">Aktiv</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Yarat</button>
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                    Bağla
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>


